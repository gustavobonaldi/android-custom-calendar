<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FirstFragment">

    <br.com.bonaldi.customcalendar.CustomCalendar
        android:id="@+id/custom_calendar_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:dayBackgroundColor="@color/calendar_day_color"
        app:dayTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxMultiSelectionDates="10"
        app:monthBackgroundColor="@color/black"
        app:monthTextColor="@color/white_app"
        app:selectedDayBackgroundColor="@color/dim_gray"
        app:selectedDayTextColor="@color/white"
        app:selectionType="Single"
        app:weekDayBackgroundColor="@color/black"
        app:weekDayTextColor="@color/white" />

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_calendar_item" />
</androidx.constraintlayout.widget.ConstraintLayout>