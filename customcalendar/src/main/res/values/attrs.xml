<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomCalendar">
        <attr name="calendarViewType" format="enum">
            <enum name="single" value="0"/>
            <enum name="list" value="1"/>
            <enum name="paged" value="2"/>
        </attr>
        <attr name="selectionType" format="enum">
            <enum name="Single" value="0"/>
            <enum name="Multiple" value="1"/>
            <enum name="Range" value="2"/>
        </attr>
        <attr name="maxMultiSelectionDates" format="integer"/>
        <attr name="weekDayBackgroundColor" format="color"/>
        <attr name="weekDayTextColor" format="color"/>
        <attr name="dayBackgroundColor" format="color"/>
        <attr name="dayTextColor" format="color"/>
        <attr name="selectedDayBackgroundColor" format="color"/>
        <attr name="selectedDayTextColor" format="color"/>
        <attr name="monthBackgroundColor" format="color"/>
        <attr name="monthTextColor" format="color"/>
    </declare-styleable>
</resources>